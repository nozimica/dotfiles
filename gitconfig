    path = ~/.gitconfig.local
[core]
	editor = vim
	; pager = less -F -X
	pager = less -FMRiX
[merge]
	tool = vimdiff
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[branch "master"]
	remote = origin
	merge = refs/heads/master
[push]
	default = simple
[remote "origin"]
	push = HEAD
[alias]
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
	dag5 = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order -5
	dag10 = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order -10
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	co = checkout
[pull]
	rebase = true
[rebase]
	autoStash = true
[init]
	defaultBranch = mainline
